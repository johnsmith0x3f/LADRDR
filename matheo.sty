\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{matheo}

%------------------------------------------------------------------------------%

\RequirePackage{amsmath}
\RequirePackage{amssymb}

\DeclareMathAlphabet{\mathcal}{OMS}{zplm}{m}{n}
% Linear Maps
\DeclareMathOperator{\lmap}{\mathcal{L}}
% Polynomials
\DeclareMathOperator{\poly}{\mathcal{P}}

% Vector Spaces
\DeclareMathOperator{\spanspace}{span}
\DeclareMathOperator{\nullspace}{null}
\DeclareMathOperator{\rangespace}{range}

% Remove extra space around \left & \right.
\let\originalleft\left
\renewcommand{\left}{\mathopen{}\mathclose\bgroup\originalleft}
\let\originalright\right
\renewcommand{\right}{\aftergroup\egroup\originalright}

% Set set presets.
\newcommand{\N}{\mathbf{N}}
\newcommand{\Z}{\mathbf{Z}}
\newcommand{\Q}{\mathbf{Q}}
\newcommand{\R}{\mathbf{R}}
\newcommand{\C}{\mathbf{C}}
\newcommand{\F}{\mathbf{F}}

% Left/Right Hand Side
\newcommand{\LHS}{\mathrm{LHS}}
\newcommand{\RHS}{\mathrm{RHS}}

% Absolute Value (|) and Norm (||)
\newcommand{\abs}[1]{\left\lvert #1 \right\rvert}
\newcommand{\norm}[1]{\left\lVert #1 \right\rVert}

% Inner Products
\newcommand{\inp}[2]{\left\langle #1, #2 \right\rangle}

% Use prettier signs.
\renewcommand{\le}{\leqslant}
\renewcommand{\ge}{\geqslant}

%------------------------------------------------------------------------------%

\RequirePackage{amsthm}

% Lemmas
\newtheorem{lemma}{Lemma}

% Proofs and Solutions
\renewcommand{\qedsymbol}{$\blacksquare$}
\newenvironment{hint}{\renewcommand{\qedsymbol}{}\begin{proof}}{\end{proof}}
\newenvironment{solution}{\renewcommand{\qedsymbol}{}\begin{proof}[Solution]}{\end{proof}}
\newenvironment{countexam}{\renewcommand{\qedsymbol}{}\begin{proof}[Counterexample]}{\end{proof}}
